<Window x:Class="WpfApp1.Crud.fireDiag"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Crud"
        mc:Ignorable="d"
        Title="fireDiag" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="0,10">
            <Label Content="Увольнение сотрудника:" VerticalAlignment="Center" />
            <TextBox x:Name="txtSearchId" Width="100" Margin="5"/>
            <Button Content="Уволить" Click="SearchButton_Click" Margin="5" />
            <Button Content="Отменить" Click="ResetSearchButton_Click" Margin="5" />
        </StackPanel>

    </Grid>
</Window>

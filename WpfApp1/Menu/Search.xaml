<Window x:Class="WpfApp1.Crud.Search"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Crud"
        mc:Ignorable="d"
        Title="Search" Height="200" Width="200">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="0,10">
            <Label Content="Поиск по ID:" VerticalAlignment="Center" />
            <TextBox x:Name="txtSearchId" Width="100" Margin="5"/>
            <Button Content="Поиск" Click="SearchButton_Click" Margin="5" />
            <Button Content="Сброс" Click="ResetSearchButton_Click" Margin="5" />
        </StackPanel>

    </Grid>
</Window>

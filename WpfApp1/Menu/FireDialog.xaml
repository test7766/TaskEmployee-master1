<Window x:Class="WpfApp1.Crud.FireDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Crud"
        mc:Ignorable="d"
        Title="Увольнение" Height="200" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="0,10">
            <Label Content="Уволить сотрудника:" VerticalAlignment="Center" />
            <TextBox x:Name="txtName" Width="190" Margin="5"/>
            <DatePicker
                 Grid.Column="1"
                 Height="Auto"
                 Width="190"
                 Margin="5"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center" 
                 x:Name="txtdate_of_dismissal"/>
            <Button Content="Уволить" Click="FireButton_Click" Margin="5" />
            <Button Content="Отменить" Click="CancelFireButton_Click" Margin="5" />
        </StackPanel>

    </Grid>
</Window>
